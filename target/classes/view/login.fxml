<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="filmai.controller.LoginController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="Infinity" text="Login" VBox.vgrow="ALWAYS">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="50.0" top="50.0" />
         </VBox.margin></Label>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label minWidth="70.0" text="Username">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin></Label>
            <TextField fx:id="username" minWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="87.0" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label alignment="BOTTOM_LEFT" minWidth="70.0" text="Password">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Label>
            <PasswordField fx:id="password" minWidth="200.0" onKeyPressed="#enterPressed" />
         </children>
      </HBox>
      <Label fx:id="login_error" alignment="CENTER" minHeight="50.0" prefWidth="Infinity" textFill="RED" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="button_register" minWidth="70.0" mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Register">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Button>
            <Button fx:id="login_button" minWidth="70.0" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin></Button>
         </children></HBox>
   </children>
</VBox>
